@model IEnumerable<HumanResources.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.Raw(Html.Encode(Html.DisplayNameFor(model => model.Department.DepartmentName)).Replace("\n", "<br/>"))
        </th>
        <th>
             @Html.Raw(Html.Encode(Html.DisplayNameFor(model => model.FirstName)).Replace("\n","<br/>"))
        </th>
        <th>
            @Html.Raw(Html.Encode(Html.DisplayNameFor(model => model.LastName)).Replace("\n","<br/>"))
        </th>
        <th>
            @Html.Raw(Html.Encode(Html.DisplayNameFor(model => model.HireDate)).Replace("\n", "<br/>"))
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HireDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeId })
        </td>
    </tr>
}

</table>
